{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    
    "target": "es2022",
    "lib": ["es2020"],
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "ts-node": {
    "esm": true
  },
  "exclude":[
    "./node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
